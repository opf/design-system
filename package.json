{
  "version": "0.0.1",
  "private": true,
  "license": "GPL-3.0",
  "scripts": {
    "dev": "concurrently \"npm run packages:dev\" \"npm run storybook:serve\"",
    "packages:dev": "lerna run --stream --parallel dev",
    "packages:build": "lerna run --stream build",
    "docs:json": "compodoc -p ./tsconfig.json -e json -d .",
    "storybook:pre": "lerna run build --scope @openproject/angular --scope @openproject/styles && npm run docs:json",
    "storybook:serve": "npm run storybook:pre && start-storybook --no-manager-cache -c ./.storybook -p 6006",
    "storybook:build": "npm run storybook:pre && build-storybook -c ./.storybook",
    "lerna:publish": "lerna publish --conventional-commits --yes --skip-npm",
    "postlerna:publish": "lerna run publish:custom"
  },
  "dependencies": {
    "@angular/animations": "~12.0.4",
    "@angular/common": "~12.0.4",
    "@angular/compiler": "~12.0.4",
    "@angular/core": "~12.0.4",
    "@angular/forms": "~12.0.4",
    "@angular/platform-browser": "~12.0.4",
    "@angular/platform-browser-dynamic": "~12.0.4",
    "@angular/router": "~12.0.4",
    "rxjs": "~6.6.0",
    "tslib": "^2.1.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.0.4",
    "@angular/cli": "~12.0.4",
    "@angular/compiler-cli": "~12.0.4",
    "@angular/elements": "^12.0.5",
    "@babel/core": "^7.14.6",
    "@compodoc/compodoc": "^1.1.15",
    "@storybook/addon-actions": "^6.3.0",
    "@storybook/addon-docs": "^6.3.0",
    "@storybook/addon-essentials": "^6.3.0",
    "@storybook/addon-knobs": "^6.3.0",
    "@storybook/addon-links": "^6.3.0",
    "@storybook/angular": "^6.3.0",
    "@storybook/builder-webpack5": "^6.3.0",
    "@storybook/manager-webpack5": "^6.3.0",
    "@storybook/theming": "^6.3.0",
    "@types/jasmine": "~3.6.0",
    "@types/node": "^12.11.1",
    "@webcomponents/custom-elements": "^1.4.3",
    "@whitespace/storybook-addon-html": "^5.0.0",
    "babel-loader": "^8.2.2",
    "concurrently": "^6.3.0",
    "jasmine-core": "~3.7.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "lerna": "^4.0.0",
    "ng-packagr": "^12.0.0",
    "raw-loader": "^4.0.2",
    "typescript": "~4.2.3"
  }
}
